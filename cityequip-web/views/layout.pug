doctype html
html
  head
    title CityEquip
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    // Leaflet CSS
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css")
    style.
      body { padding-top: 60px; }
      .map-container { height: 400px; width: 100%; }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href="/equipments") CityEquip
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href="/equipments") Equipments
            li.nav-item
              a.nav-link(href="/equipments/map") Map
            li.nav-item
              a.nav-link(href="/equipments/rankings") Rankings
          ul.navbar-nav
            if currentUser
              if currentUser.role === 'admin'
                li.nav-item
                  a.nav-link.text-warning(href="/admin/create") + New Equipment
              li.nav-item
                a.nav-link(href="/auth/profile") Profile (#{currentUser.username})
              li.nav-item
                a.nav-link(href="/auth/logout") Logout
            else
              li.nav-item
                a.nav-link(href="/auth/login") Login
              li.nav-item
                a.nav-link(href="/auth/register") Register
    
    .container.mt-4
      if error
        .alert.alert-danger= error
      if success
        .alert.alert-success= success
      block content

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    // Leaflet JS
    script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js")
    block scripts
